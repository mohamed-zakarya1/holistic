<Page x:Class="holistic.sign_in"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:holistic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="sign_in">

    <Grid Background="white">
        <TextBox HorizontalAlignment="Left" Height="47" Margin="113,17,0,0" TextWrapping="Wrap" Text="" x:Name="usernametxt" VerticalAlignment="Top" Width="245"/>
        <Label Style="{StaticResource forLabels}" Content="user Name" Margin="22,23,710,386"/>
        <PasswordBox HorizontalAlignment="Left" Height="47" Margin="113,119,0,0" x:Name="passtxt" VerticalAlignment="Top" Width="245"/>
        <Label Style="{StaticResource forLabels}" Content="password" Margin="22,126,710,284"/>
        <Button Style="{StaticResource forButtons}" x:Name="signInbtn" Margin="125,225,495,168" Click="signInbtn_Click">Login</Button>
    </Grid>
</Page>
